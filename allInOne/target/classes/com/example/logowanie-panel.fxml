<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="bp_back" onMouseDragged="#draged" onMousePressed="#pressed" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.LoginController">
   <center>
      <HBox prefHeight="550.0" prefWidth="900.0">
         <children>
            <VBox fx:id="vb_backL" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="450.0">
               <children>
                  <Label fx:id="l_login" alignment="CENTER" prefHeight="76.0" prefWidth="283.0" text="Logowanie">
                     <VBox.margin>
                        <Insets bottom="25.0" />
                     </VBox.margin>
                     <font>
                        <Font size="48.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tf_login" maxHeight="40.0" maxWidth="200.0" prefHeight="40.0" prefWidth="200.0" promptText="Login">
